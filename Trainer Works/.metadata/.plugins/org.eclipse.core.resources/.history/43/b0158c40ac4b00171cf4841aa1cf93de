package com.fannie.pom;

import org.openqa.selenium.By;
import org.openqa.selenium.WebDriver;
import org.openqa.selenium.WebElement;

public class FlightPagePOM {
	private static WebElement element;
	
	public static WebElement clickFlightTab(WebDriver driver){
		return driver.findElement(By.id("tab-flight-tab-hp")); 
	}
	
	public static WebElement flyFromTextBox(String flyFrom, WebDriver driver){
		element = driver.findElement(By.id(flyFrom));
		return element;
	}
	
	// there shall be more methods 
	
}
